generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
}


model Order {
  id        String   @id @default(uuid())
  userId    String 
  url       String 
  targetPrice Float
  currentPrice Float?
  status    OrderStatus   @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}